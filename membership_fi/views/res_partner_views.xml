    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">partner.form.fi</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <field name="vat" position="before">
                <field name="url_financial_supervisory" widget="url" attrs="{'invisible': [('insurance_company_type', 'in', ['person','fellowship'])]}" />
            </field>
        </field>
    </record>
    <record id="ir_actions_server_fi_scrape" model="ir.actions.server">
        <field name="name">Scrape Company from FI</field>
        <field name="model_id" ref="base.model_res_partner" />
        <field name="binding_model_id" ref="base.model_res_partner" />
        <field name="state">code</field>
        <field name="code">action = record.fi_scrape_company()</field>
    </record>

    <record id="ir_actions_server_fi_partner_difference" model="ir.actions.server">
        <field name="name">Company Partner Difference</field>
        <field name="model_id" ref="base.model_res_partner" />
        <field name="binding_model_id" ref="base.model_res_partner" />
        <field name="state">code</field>
        <field name="code">action = record.get_fi_partner_difference()</field>
    </record>

